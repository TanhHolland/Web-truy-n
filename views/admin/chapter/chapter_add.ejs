<%- include ('../../layout/headerAdmin.ejs'); -%>

<form action="/admin/chapters/add" method="POST">
    <div class="form-group">
        <label for="name">Chương số</label>
        <input type="text" name="name" class="form-control" placeholder="Chương số">
    </div>
    <div class="form-group">
        <label for="description">Tên Chương</label>
        <input type="text" name="description" class="form-control" placeholder="Tên Chương">
    </div>
    <div class="form-group">
        <label for="name">Thuộc truyện: </label>
        <%
            products.forEach( (item) =>{%>
                <div class="form-check-inline">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="product" value="<%= item.name %>">
                        <label for="category"><%= item.name %></label>
                    </label>
                </div>
            <%})
        %>
    </div>

    <button type="submit" class="btn btn-primary">Thêm mới</button>
</form>

<%- include ('../../layout/footerAdmin.ejs'); -%>